<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="collective.eeafaceted.z3ctable">

<body>
  <metal:content-core fill-slot="content-core">
    <metal:block define-macro="content-core">
      <div tal:define="batch python: folderContents;">

        <div metal:use-macro="context/global_statusmessage/macros/portal_message">
          Portal status message
        </div>

        <div id="viewlet-top-above-nav" tal:content="structure provider:collective.eeafaceted.z3ctable.topabovenav" />

        <div metal:use-macro="context/batch_macros/macros/navigation" />

        <div id="viewlet-top-below-nav" tal:content="structure provider:collective.eeafaceted.z3ctable.topbelownav" />

        <div tal:condition="batch/sequence_length"
             class="table_faceted_results">
          <span i18n:translate="batch_x_items_matching_your_criteria" i18n:domain="plone">
          <strong i18n:name="number" id="search-results-number"
                  tal:content="batch/sequence_length|string:0">234</strong>
            items matching your search terms.
          </span>
        </div>

        <div tal:condition="not: batch/sequence_length"
             class="table_faceted_no_results" i18n:domain="plone" i18n:translate="description_no_results_found">No results were found.</div>

        <a href="#" onclick="javascript: event.preventDefault(); Faceted.URLHandler.hash_changed();">
          <img src="#"
               tal:attributes="src string:${context/portal_url}/++resource++collective.eeafaceted.z3ctable/refresh.gif" /><span i18n:translate="refresh_results">Refresh search results.</span>
        </a>

        <div style="clear: both;"></div>
        <div class="eea-preview-items"
             tal:condition="batch/sequence_length"
             tal:define="table_view nocall:context/@@faceted-table-view;">
          <span tal:replace="structure python:table_view.render_table(batch)" />
        </div>

        <div style="clear: both;"></div>

        <div id="viewlet-top-below-nav" tal:content="structure provider:collective.eeafaceted.z3ctable.bottomabovenav" />

        <div metal:use-macro="context/batch_macros/macros/navigation" />

        <div id="viewlet-top-below-nav" tal:content="structure provider:collective.eeafaceted.z3ctable.bottombelownav" />

      </div>

    </metal:block>
  </metal:content-core>
</body>
</html>
